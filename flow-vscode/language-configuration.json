{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [],
    "autoClosingPairs": [
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "{", "close": "}", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(config|services|workflow|step\\s+\\w[\\w-]*|if\\s+.*|otherwise\\s+if\\s+.*|otherwise|for\\s+each\\s+.*|on\\s+failure|if\\s+still\\s+failing|on\\s+timeout|with\\s+headers)\\s*:\\s*(#.*)?$",
        "decreaseIndentPattern": "^\\s*(otherwise|otherwise\\s+if)\\s*"
    },
    "wordPattern": "[a-zA-Z][a-zA-Z0-9_-]*"
}
